<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailFragment">

    <ImageView
        android:id="@+id/dimage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dnom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:text="Nom"
        app:layout_constraintEnd_toEndOf="@+id/dimage"
        app:layout_constraintTop_toBottomOf="@+id/dimage" />

    <TextView
        android:id="@+id/dprenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Prenom"
        app:layout_constraintEnd_toEndOf="@+id/dnom"
        app:layout_constraintTop_toBottomOf="@+id/dnom" />

    <TextView
        android:id="@+id/dtelephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Telephone"
        app:layout_constraintEnd_toEndOf="@+id/dprenom"
        app:layout_constraintTop_toBottomOf="@+id/dprenom" />

    <TextView
        android:id="@+id/dspecialite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Spécialité"
        app:layout_constraintEnd_toEndOf="@+id/dtelephone"
        app:layout_constraintTop_toBottomOf="@+id/dtelephone" />

    <TextView
        android:id="@+id/dexp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Expérience"
        app:layout_constraintEnd_toEndOf="@+id/dspecialite"
        app:layout_constraintTop_toBottomOf="@+id/dspecialite" />

    <TextView
        android:id="@+id/dfacebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Facebook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dexp" />

</androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


